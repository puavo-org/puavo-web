source "http://rubygems.org"

# Some code and dependencies of puavo-web is used in puavo-rest during test
# runs (ActiveLdap models). But in production we can safely ignore those.
File.open("../Gemfile.shared") do |f|
  eval f.read, nil, "../Gemfile.shared"
end rescue Errno::ENOENT

gem "sinatra"
gem "sinatra-contrib"
gem "uuid"
gem "puma"
gem "rack-rewrite"
gem "addressable"
gem "jwt"
gem "gssapi", :git => "https://github.com/opinsys/gssapi.git", :branch => "gss_krb5_copy_ccache"
gem "sinatra-r18n"
gem "redcarpet"
gem "pry"
gem "redis"
gem 'fluent-logger'
gem "yajl-ruby"
gem "msgpack"
gem "colorize"
gem "redis-namespace"
gem "icalendar"
gem "httparty"
gem "pony"
gem "gibberish"
gem "sinatra-support", :require => "sinatra/support"
gem "redlock"
gem "elasticsearch"
gem "http"
gem "dnsruby"
gem "net-ldap"
gem "byebug"
gem "ntlm-http"

group :test do
  gem "shotgun"
  gem "timecop"
  gem "webmock"
  gem "m"
  gem "minitest"
  gem "ripper-tags"
  gem "yard"
end

