source "http://rubygems.org"

# Some code and dependencies of puavo-web is used in puavo-rest during test
# runs (ActiveLdap models). But in production we can safely ignore those.
File.open("../Gemfile.shared") do |f|
  eval f.read, nil, "../Gemfile.shared"
end rescue Errno::ENOENT

gem "sinatra", "~> 1.4.4"
gem "sinatra-contrib"
gem "uuid"
gem "puma", "~> 2.11.1"
gem "rack-rewrite", "~> 1.4.01"
gem "addressable"
gem "jwt", "~> 0.1.8"
gem "gssapi", :git => "https://github.com/opinsys/gssapi.git", :branch => "gss_krb5_copy_ccache"
gem "sinatra-r18n", "~> 1.1.8"
gem "redcarpet"
gem "debugger"
gem "pry"
gem "redis"
gem 'fluent-logger', "~> 0.4.3"
gem "yajl-ruby"
gem "msgpack"
gem "colorize"
gem "redis-namespace"
gem "icalendar", "~> 1.5.0"
gem "httparty"
gem "pony"
gem "gibberish", "~> 1.4.0"
gem "sinatra-support", :require => "sinatra/support"
gem "redlock", "0.1.2"
gem "elasticsearch"

group :test do
  gem "shotgun"
  gem "timecop"
  gem "webmock"
  gem "m"
  gem "minitest"
  gem "ripper-tags"
  gem "yard"
end

