footer {
  text-align: center;
  font-size: 75%;
  color: #888;
  min-width: 600px;
  max-width: 800px;
  border-top: 1px solid var(--generic-border);
  margin: 20px auto;
  padding-top: 10px;
}

footer a {
  color: var(--link-foreground);
}

footer a:hover, footer a:active {
  color: var(--link-foreground-hover);
}

@media screen and (max-width: 800px) {
  .passwordContainer {
    width: 100%;
    padding: 10px;
    margin: 0;
    min-width: reset;
    max-width: reset;
  }

  .content table {
    padding: 0;
  }

  .content table tbody {
    display: block;
  }

  .content table tr {
    display: block;
    position: relative;
    padding: 5px 0;
  }

  .content table th {
    text-align: left;
    width: auto;
    padding: 5px 0;
  }

  .content table td {
    display: block;
    text-align: left;
    padding: 0;
  }

  .buttonRow input {
    width: 100%;
  }

  .content input[type="password"] { width: 100%; }
}
