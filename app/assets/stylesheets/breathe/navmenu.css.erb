.navbar-first-level {
  clear: both;
  margin: 5px 0 -1px;
}

.navbar-first-level h1 {
  float: left;
  font-size: 2.5em;
  margin: 10px 0 0 10px;
}

#top-area {
  background: #f7efe7;
}

/*=== Navigation ===*/

.navbar-second-level {
  background: none repeat scroll 0 0 #A36A2A;
  background:-moz-linear-gradient(center bottom , #A36A2A 35%, #BA722D 60%) repeat scroll 0 0 transparent;
  background: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.35, rgb(153,106,42)),
    color-stop(0.6, rgb(186,114,45))
  );
  background-image: -o-linear-gradient(top,rgb(186,114,45),rgb(153,106,42));
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#A36A2A, endColorstr=#BA722D);
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=#A36A2A, endColorstr=#BA722D)";
  border:1px solid #222222;
  border-radius: 0 12px 0 0;
  clear: both;
  color: #4A4D4A;
  font-size: 85%;
  font-weight: normal;
  height: 35px;
  margin: 0;
  padding: 0;
  text-transform: uppercase;
  width: 100%;
  z-index: 9999;
  -moz-border-radius: 0 12px 0 0;
  -webkit-border-radius: 0 12px 0 0;
}

div:not(.navbar-second-level) .maincontent:first-of-type {
  border-top: 1px solid #222;
  margin: 1em 0;
}

.navbar-second-level ul:not(.submenu) {
  display: inline-block;
  margin: 5px 0 0;
  padding: 0;
}

.navbar-second-level > ul {
  display:inline-block;
  margin: 5px 0 0;
  padding: 0;
}

.navbar-second-level li {
  display: inline;
  float: left;
  height: 29px  ;
  margin: 0 0 0 5px;
  min-width: 50px;
  padding: 0;
  position: relative;
  text-align: center;
  text-decoration: none;
  white-space: nowrap;
  width: auto !important;
}

.navbar-second-level li:first-child {
  margin: 0 0 0 6px;
}

.navbar-second-level li:hover:not(.current) {
  background: none repeat scroll 0 0 #FFFFFF;
  border-radius: 10px 10px 0 0;
  border-left: 1px solid #222222;
  border-radius: 10px 10px 0 0;
  border-right: 1px solid #222222;
  border-top: 1px solid #222222;
  margin-right:-2px ;
  z-index: 9999;
  -moz-border-radius:10px 10px 0 0;
  -webkit-border-radius:10px 10px 0 0;
}

.navbar-second-level li a {
  border-radius: 10px 10px 0 0;
  color: #E6E6D8;
  display: block;
  line-height: 3;
  margin: 0;
  padding: 0 0.6em;
  text-decoration: none;
  -moz-border-radius: 10px 10px 0 0;
  -webkit-border-radius: 10px 10px 0 0;
}
.navbar-second-level li a:hover {
  color:#222222;
}
.navbar-second-level li.current {
  background: none repeat scroll 0 0 #FFFFFF;
  border-left: 1px solid #222222;
  border-radius: 10px 10px 0 0;
  border-right: 1px solid #222222;
  border-top: 1px solid #222222;
  -moz-border-radius: 10px 10px 0 0;
  -webkit-border-radius: 10px 10px 0 0;
}
.navbar-second-level li.current a {
  color: #4A4D4A;
}