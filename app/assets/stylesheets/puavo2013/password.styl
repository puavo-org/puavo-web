@import 'nib'

.login-wrap
  font-size 80%
  margin 50px auto
  max-width 1200px
  width 80%

.password_container
  margin 0
  padding 2%
  position relative
  width 100%
  .login_content
    padding 2%
    .password_buttons
      position absolute
      top -45px
    p
      margin 0 0.5em 1em
      padding 1em
      text-align center
    span
      float left
      display block
      height 45px
      margin 0 10px 0 0
      padding 0 10px
      width auto
      a
        background-position 5px -790px
        display block
        line-height 3.5
        padding 0 0 0 40px
        text-align center
        text-transform uppercase
      &:hover
        a
          background-position 5px -830px
      &.change_other_pswd
        a
          background-position 5px -870px
          text-align left
        &:hover
          a
            background-position 5px -910px
    table
      margin 0
      tr
        td[colspan="2"]
          text-align left
      input[type="submit"]
        width 100%

@media screen-breakpoint-one
  .login-wrap
    font-size 100%
    width 100%