/* The user profile editor */

@import "bits/media_queries";
@import "bits/public_forms";

* {
  box-sizing: border-box;
}

html {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  background: var(--page-background);
  font-family: var(--font);
  margin: 0;
  padding: 1em 0;
}

a:focus {
  outline-color: rgb(82, 148, 226);
}

#outerContainer {
  margin: 0 auto;
  width: 750px;
  color: var(--content-foreground);
}

