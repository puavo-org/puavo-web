/*
Outline schematic:

 +-form------------------------------------------------------------------+
 | +-#upper------------------------------------------------------------+ |
 | | +-#left------------+-#right-------------------------------------+ | |
 | | |                  |                                            | | |
 | | |    User avatar   |          Profile editor                    | | |
 | | |                  |                                            | | |
 | | +------------------+--------------------------------------------+ | |
 | +-------------------------------------------------------------------+ |
 | +-#lower------------------------------------------------------------+ |
 | |                                 Button(s)                         | |
 | +-------------------------------------------------------------------+ |
 +-----------------------------------------------------------------------+

- the form element and #upperWrapper are flexbox containers
- #upper, #lower, #left and #right are flexbox items

*/

form {
  display: flex;
  flex-direction: column;
}

#upper {
  display: flex;
  flex-direction: rows;
  gap: 10px;
}

#lower {
  text-align: center;
}

#left {
  width: 220px;
  min-width: 220px;
  max-width: 220px;
  text-align: center;
}

#left img {
  min-width: 128px;
  max-width: 200px;
}

#right {
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

#right p {
  display: block;
  margin: 0;
  padding: 0;
}

.userInfo {
  color: var(--service-foreground);
  background: var(--service-background);
  border: 1px solid var(--service-border);
  padding: 0.5em;
  text-align: center;
}

.userName {
  font-size: 150%;
  font-weight: bold;
}

.userSchool {
  font-size: 120%;
  font-weight: bold;
  font-style: italic;
}

label {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5em;
}

input[type="text"] {
  padding: 0.5em;
}

select {
  background: var(--input-background);
  color: var(--input-foreground);
  border: none;
  border: 1px solid var(--input-border);
  margin: 0;
  padding: 0.35em;
  border-radius: 3px;
  flex-grow: 2;
  font-size: 90%;
  outline: none;
}

select:focus {
  border-color: var(--input-border-active);
}

input, select, .automaticEmail {
  margin-left: 2em;
  width: calc(100% - 2em);
}

input {
  padding: 0.5em;
}

.automaticEmail {
  font-size: 90%;
}

.notice {
  margin-left: 2em;
  padding-top: 5px;
  font-size: 80%;
  color: #f0f;
}

#lower input, #lower button {
  width: 75%;
  margin: 1em;
  padding: 1em 2em;
}

::placeholder, ::-webkit-input-placeholder {
  font-style: italic;
}

/* The messages on the notification page displayed after the profile is saved */
.saveNotice {
  color: var(--save-foreground);
  background: var(--save-background);
  border: 1px solid var(--save-border);
  padding: 0 1em;
}
