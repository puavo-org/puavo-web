                        <tbody></tbody>
                    </table>
                </details>
            </div>

            <div class="settingRow">
                <input type="checkbox" id="trimValues" checked>
                <label for="trimValues"><%= t('new_import.trim') %></label>
            </div>

            <div class="settingRow">
