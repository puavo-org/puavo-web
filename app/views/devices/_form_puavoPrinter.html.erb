<!-- devices/_form_puavoPrinter starts -->
<%= form_for(@device, :url => path, :html => { :method => method }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :puavoDeviceType %>: <%= t("host.types.#{@device.puavoDeviceType}") %>
    <%= f.hidden_field :puavoDeviceType %>
    <%= f.hidden_field :classes, :value => Puavo::CONFIG["device_types"][@device.puavoDeviceType]["classes"] %>
  </p>

  <p>
    <%= f.label :puavoHostname %><br />
    <%= f.text_field :puavoHostname %>
  </p>
  <p>
    <%= f.label :puavoTag %><br />
    <%= f.text_field :puavoTag %>
  </p>
  <p>
    <%= f.label :macAddress %><br />
    <%= f.text_field :macAddress %>
  </p>
  <p>
    <%= f.submit submit_text %>
  </p>
<% end %>
<!-- devices/_form_puavoPrinter ends -->
