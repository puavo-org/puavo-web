<% html_args = { :method => method,
                 :multipart => true,
                 :class => "form-horizontal" } %>
<% html_args[:'data-remote'] = true if @data_remote %>


<%= form_for( @user,
             :url => profile_path,
             :html => html_args ) do |f| %>

  <div class="control-group">
    <%= f.label :telephoneNumber, nil, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :telephoneNumber, :placeholder => t('activeldap.attributes.user.telephoneNumber') %>
    </div>

    <div class="margin20">
      <%= f.label :mail, nil, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :mail, :placeholder => t('activeldap.attributes.user.mail') %>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :puavoLocale, nil, :class => "control-label" %>
    <div class="controls">
      <%= f.select :puavoLocale,
          locales_for_select %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :jpegPhoto, nil, :class => "control-label" %>
    <div class="controls">
    <%= f.file_field :jpegPhoto %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit submit_text %>
    </div>
    <div class="controls">
      <% if message_keys = flash.keys.select { |key| [:notice, :alert].include?(key) } %>
        <% message_keys.each do |key| %>
          <p class="message_<%= key %>">
            <%= flash[key] %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>

<% end %>
